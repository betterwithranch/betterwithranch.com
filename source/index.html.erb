    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/images/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Better With Ranch</h1>
                        <hr class="small">
                        <span class="subheading">Adding a little flavor to software</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                          <%= blog.articles[0].title %>
                        </h2>
                        <h3 class="post-subtitle">
                        </h3>
                    </a>
                      <%= blog.articles[0].body %>
                      <p class="post-meta">Posted by <a href="#">Craig Israel</a> on <%= blog.articles[0].date.strftime("%B %d, %Y") %></p>
                </div>
                <hr>
                <hr>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="/blog">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <hr>

