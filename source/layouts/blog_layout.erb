<% content_for(:title) do %>
  <%= blog.articles[0].title if blog.articles.length > 0 %>
<% end %>

<% content_for(:head) do %>
  <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
<% end %>

<% wrap_layout(:layout) do %>
    
    <header class="intro-header" style="background-image: url('/images/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Better With Ranch</h1>
                        <hr class="small">
                        <span class="subheading">Adding a little flavor to software</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div id="main" role="main" class="col-md-8">
      <%= yield %>
    </div>
    
    <aside class="col-md-4">
      <h2>Recent Articles</h2>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
        <% end %>
      </ol>

      <h2>Tags</h2>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </ol>

      <h2>By Year</h2>
      <ol>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </ol>
    </aside>
<% end %>
